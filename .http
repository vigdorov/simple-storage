@host = https://simple-storage.vigdorov.ru
@user = test_user
@auth = 6d4c2f3e-e9ae-4a57-8a10-91656e4902eb
@storage_id = 6817ac44687546864fb1f5ac

### Auth
POST {{host}}/auth HTTP/1.1
content-type: application/json

{
    "login": "{{user}}"
}

### Get storages list
GET {{host}}/storages HTTP/1.1
content-type: application/json
Authorization: {{auth}}

{
    "login": "test_user"
}

### Create storage
POST {{host}}/storages HTTP/1.1
content-type: application/json
Authorization: {{auth}}

{
  "data": {
    "tasks": []
  },
  "storageName": "tasks"
}

### Get storage
GET {{host}}/storages/{{storage_id}} HTTP/1.1
content-type: application/json
Authorization: {{auth}}

### Update storage
PUT {{host}}/storages/{{storage_id}} HTTP/1.1
content-type: application/json
Authorization: {{auth}}

{
  "data": {
    "tasks": [
        {
            "title": "task #1"
        },
        {
            "title": "task #1"
        },
        {
            "title": "task #1"
        },
        {
            "title": "task #1"
        },
        {
            "title": "task #1"
        }
    ]
  }
}

### Remove image
DELETE {{host}}/storages/{{storage_id}} HTTP/1.1
content-type: application/json
Authorization: {{auth}}
